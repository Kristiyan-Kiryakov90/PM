/**
 * Global Styles - Modern SaaS Design System
 * Inspiration: Linear, Notion, Superhuman
 */

/* Import Bootstrap */
@import 'bootstrap/dist/css/bootstrap.min.css';

/* Root CSS Variables - Modern Design System */
:root {
  /* Primary Colors - Modern blue palette */
  --primary: #3b82f6;
  --primary-hover: #2563eb;
  --primary-active: #1d4ed8;
  --primary-light: #dbeafe;
  --primary-lighter: #f0f9ff;

  /* Semantic Colors */
  --success: #10b981;
  --success-light: #d1fae5;
  --warning: #f59e0b;
  --warning-light: #fef3c7;
  --danger: #ef4444;
  --danger-light: #fee2e2;
  --info: #0ea5e9;
  --info-light: #cffafe;

  /* Neutrals - Carefully chosen for modern look */
  --gray-50: #f9fafb;
  --gray-100: #f3f4f6;
  --gray-200: #e5e7eb;
  --gray-300: #d1d5db;
  --gray-400: #9ca3af;
  --gray-500: #6b7280;
  --gray-600: #4b5563;
  --gray-700: #374151;
  --gray-800: #1f2937;
  --gray-900: #111827;

  /* Legacy Bootstrap variables for compatibility */
  --primary-color: var(--primary);
  --secondary-color: var(--gray-500);
  --success-color: var(--success);
  --danger-color: var(--danger);
  --warning-color: var(--warning);
  --info-color: var(--info);

  /* Typography */
  --font-sans: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  --font-mono: 'SF Mono', Monaco, 'Cascadia Code', 'Courier New', monospace;

  --font-family: var(--font-sans);

  /* Type Scale (modular scale 1.125) */
  --text-xs: 0.75rem;     /* 12px */
  --text-sm: 0.875rem;    /* 14px */
  --text-base: 1rem;      /* 16px */
  --text-lg: 1.125rem;    /* 18px */
  --text-xl: 1.25rem;     /* 20px */
  --text-2xl: 1.5rem;     /* 24px */
  --text-3xl: 1.875rem;   /* 30px */
  --text-4xl: 2.25rem;    /* 36px */

  /* Line Heights */
  --leading-tight: 1.25;
  --leading-snug: 1.375;
  --leading-normal: 1.5;
  --leading-relaxed: 1.625;

  /* Spacing - 4px base unit */
  --space-1: 0.25rem;     /* 4px */
  --space-2: 0.5rem;      /* 8px */
  --space-3: 0.75rem;     /* 12px */
  --space-4: 1rem;        /* 16px */
  --space-5: 1.25rem;     /* 20px */
  --space-6: 1.5rem;      /* 24px */
  --space-8: 2rem;        /* 32px */
  --space-10: 2.5rem;     /* 40px */
  --space-12: 3rem;       /* 48px */

  /* Border Radius */
  --radius-xs: 2px;
  --radius-sm: 4px;
  --radius-md: 6px;
  --radius-lg: 8px;
  --radius-xl: 12px;
  --radius-2xl: 16px;
  --radius-full: 9999px;

  --border-radius: var(--radius-lg);

  /* Shadows */
  --shadow-xs: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  --shadow-sm: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
  --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);

  --box-shadow: var(--shadow-sm);

  /* Transitions */
  --transition-speed: 0.3s;
  --ease-in-out: cubic-bezier(0.4, 0, 0.2, 1);
  --ease-out: cubic-bezier(0, 0, 0.2, 1);
  --ease-in: cubic-bezier(0.4, 0, 1, 1);

  /* Layout */
  --header-height: 64px;
  --sidebar-width: 280px;
  --container-max-width: 1280px;
}

/* Global Resets */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html {
  scroll-behavior: smooth;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

body {
  font-family: var(--font-sans);
  line-height: var(--leading-normal);
  color: var(--gray-700);
  background-color: var(--gray-50);
  font-size: var(--text-base);
}

/* Typography Scale */
h1 {
  font-size: var(--text-4xl);
  font-weight: 700;
  line-height: var(--leading-tight);
  letter-spacing: -0.02em;
  color: var(--gray-900);
}

h2 {
  font-size: var(--text-3xl);
  font-weight: 700;
  line-height: var(--leading-tight);
  letter-spacing: -0.01em;
  color: var(--gray-900);
}

h3 {
  font-size: var(--text-2xl);
  font-weight: 600;
  line-height: var(--leading-snug);
  color: var(--gray-900);
}

h4 {
  font-size: var(--text-xl);
  font-weight: 600;
  line-height: var(--leading-snug);
  color: var(--gray-900);
}

h5 {
  font-size: var(--text-lg);
  font-weight: 600;
  line-height: var(--leading-snug);
  color: var(--gray-900);
}

h6 {
  font-size: var(--text-base);
  font-weight: 600;
  line-height: var(--leading-snug);
  color: var(--gray-900);
}

p {
  margin-bottom: var(--space-4);
  color: var(--gray-700);
}

small, .text-sm {
  font-size: var(--text-sm);
  color: var(--gray-600);
}

.text-muted {
  color: var(--gray-500);
}

code {
  font-family: var(--font-mono);
  font-size: 0.9em;
  background-color: var(--gray-100);
  padding: var(--space-1) var(--space-2);
  border-radius: var(--radius-sm);
  color: var(--gray-800);
}

/* Utility Classes */
.full-height {
  min-height: 100vh;
}

.center-content {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
}

.container {
  max-width: var(--container-max-width);
}

/* Spacing Utilities */
.space-y-2 > * + * { margin-top: var(--space-2); }
.space-y-4 > * + * { margin-top: var(--space-4); }
.space-y-6 > * + * { margin-top: var(--space-6); }
.space-y-8 > * + * { margin-top: var(--space-8); }

.space-x-2 > * + * { margin-left: var(--space-2); }
.space-x-4 > * + * { margin-left: var(--space-4); }
.space-x-6 > * + * { margin-left: var(--space-6); }

/* Display & Visibility */
.transition {
  transition: all var(--transition-speed) var(--ease-in-out);
}

.transition-fast {
  transition: all 0.15s var(--ease-in-out);
}

.transition-slow {
  transition: all 0.5s var(--ease-in-out);
}

.card-shadow {
  box-shadow: var(--shadow-sm);
}

.card-shadow-lg {
  box-shadow: var(--shadow-lg);
}

/* Truncation */
.truncate {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.line-clamp-2 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* Loading Spinner - Modern Animation */
.spinner-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(17, 24, 39, 0.4);
  backdrop-filter: blur(2px);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
  animation: fadeIn 0.2s ease-out;
}

.spinner-overlay.hidden {
  display: none;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.spinner-border {
  width: 48px;
  height: 48px;
  border: 4px solid var(--gray-200);
  border-top-color: var(--primary);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  margin-top: var(--space-4);
  color: var(--gray-700);
  font-size: var(--text-sm);
  font-weight: 500;
}

/* Alert Messages - Modern Styling */
.alert {
  border-radius: var(--radius-lg);
  border: 1px solid;
  padding: var(--space-4);
  margin-bottom: var(--space-4);
  display: flex;
  gap: var(--space-3);
  align-items: flex-start;
  font-size: var(--text-sm);
}

.alert-success {
  background-color: #ecfdf5;
  border-color: #d1fae5;
  color: #065f46;
}

.alert-danger {
  background-color: #fef2f2;
  border-color: #fee2e2;
  color: #7f1d1d;
}

.alert-warning {
  background-color: #fffbeb;
  border-color: #fef3c7;
  color: #78350f;
}

.alert-info {
  background-color: #f0f9ff;
  border-color: #cffafe;
  color: #0c2d6b;
}

.alert-heading {
  font-weight: 600;
  margin-bottom: var(--space-1);
}

/* Buttons - Modern Component Styles */
.btn {
  font-weight: 600;
  border-radius: var(--radius-md);
  padding: var(--space-3) var(--space-4);
  font-size: var(--text-sm);
  transition: var(--transition-speed);
  border: none;
  cursor: pointer;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-2);
  white-space: nowrap;
}

.btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

/* Primary Button */
.btn-primary {
  background-color: var(--primary);
  color: white;
  box-shadow: var(--shadow-xs);
}

.btn-primary:hover:not(:disabled) {
  background-color: var(--primary-hover);
  box-shadow: var(--shadow-sm);
  transform: translateY(-1px);
}

.btn-primary:active:not(:disabled) {
  background-color: var(--primary-active);
}

/* Secondary Button */
.btn-secondary {
  background-color: var(--gray-200);
  color: var(--gray-700);
}

.btn-secondary:hover:not(:disabled) {
  background-color: var(--gray-300);
}

/* Ghost Button */
.btn-outline-primary {
  background-color: transparent;
  border: 1px solid var(--primary);
  color: var(--primary);
}

.btn-outline-primary:hover:not(:disabled) {
  background-color: var(--primary-lighter);
  border-color: var(--primary);
}

/* Danger Button */
.btn-danger {
  background-color: var(--danger);
  color: white;
}

.btn-danger:hover:not(:disabled) {
  background-color: #dc2626;
}

/* Button Sizes */
.btn-sm {
  padding: var(--space-2) var(--space-3);
  font-size: var(--text-xs);
}

.btn-lg {
  padding: var(--space-4) var(--space-6);
  font-size: var(--text-base);
}

/* Cards */
.card {
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
  border: 1px solid var(--gray-200);
  background-color: white;
  overflow: hidden;
}

.card:hover {
  box-shadow: var(--shadow-md);
}

.card-header {
  background-color: white;
  border-bottom: 1px solid var(--gray-200);
  padding: var(--space-6);
}

.card-body {
  padding: var(--space-6);
}

.card-footer {
  background-color: var(--gray-50);
  border-top: 1px solid var(--gray-200);
  padding: var(--space-6);
}

/* Forms - Modern Input Styling */
.form-control,
.form-select {
  border-radius: var(--radius-md);
  border: 1px solid var(--gray-300);
  padding: var(--space-3) var(--space-4);
  font-size: var(--text-sm);
  transition: var(--transition-speed);
  background-color: white;
}

.form-control:hover,
.form-select:hover {
  border-color: var(--gray-400);
}

.form-control:focus,
.form-select:focus {
  border-color: var(--primary);
  box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
  outline: none;
}

.form-control::placeholder {
  color: var(--gray-500);
}

.form-label {
  font-weight: 500;
  font-size: var(--text-sm);
  color: var(--gray-700);
  margin-bottom: var(--space-2);
}

.form-text {
  font-size: var(--text-xs);
  color: var(--gray-500);
  margin-top: var(--space-2);
}

.invalid-feedback,
.valid-feedback {
  font-size: var(--text-sm);
  margin-top: var(--space-2);
}

.is-invalid {
  border-color: var(--danger);
}

.is-invalid:focus {
  border-color: var(--danger);
  box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.1);
}

/* Links */
a {
  color: var(--primary);
  text-decoration: none;
  transition: color var(--transition-speed);
}

a:hover {
  color: var(--primary-hover);
  text-decoration: underline;
}

a:focus {
  outline: 2px solid var(--primary);
  outline-offset: 2px;
  border-radius: var(--radius-sm);
}

/* Navigation Links */
.nav-link {
  color: var(--gray-700);
  font-weight: 500;
  font-size: var(--text-sm);
  transition: color var(--transition-speed);
}

.nav-link:hover {
  color: var(--primary);
  text-decoration: none;
}

.nav-link.active {
  color: var(--primary);
  border-bottom: 2px solid var(--primary);
}

/* Badge */
.badge {
  padding: var(--space-2) var(--space-3);
  border-radius: var(--radius-full);
  font-size: var(--text-xs);
  font-weight: 600;
  text-transform: capitalize;
}

.badge-primary {
  background-color: var(--primary-light);
  color: var(--primary);
}

.badge-success {
  background-color: var(--success-light);
  color: var(--success);
}

.badge-danger {
  background-color: var(--danger-light);
  color: var(--danger);
}

.badge-warning {
  background-color: var(--warning-light);
  color: var(--warning);
}

/* Table */
.table {
  font-size: var(--text-sm);
  border-collapse: collapse;
}

.table thead th {
  background-color: var(--gray-50);
  border-bottom: 2px solid var(--gray-200);
  font-weight: 600;
  color: var(--gray-900);
  padding: var(--space-4);
  text-align: left;
}

.table tbody td {
  padding: var(--space-4);
  border-bottom: 1px solid var(--gray-200);
  color: var(--gray-700);
}

.table tbody tr:hover {
  background-color: var(--gray-50);
}

/* Modal */
.modal-content {
  border: 1px solid var(--gray-200);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-lg);
}

.modal-header {
  border-bottom: 1px solid var(--gray-200);
  padding: var(--space-6);
}

.modal-body {
  padding: var(--space-6);
}

.modal-footer {
  border-top: 1px solid var(--gray-200);
  padding: var(--space-6);
}

/* Responsive Design */
@media (max-width: 1024px) {
  .container {
    padding: 0 var(--space-6);
  }
}

@media (max-width: 768px) {
  :root {
    --header-height: 56px;
    --sidebar-width: 200px;
    --text-3xl: 1.5rem;
    --text-4xl: 1.875rem;
  }

  h1 {
    font-size: var(--text-3xl);
  }

  .btn {
    padding: var(--space-2) var(--space-3);
    font-size: var(--text-xs);
  }

  .card-body,
  .card-header,
  .card-footer {
    padding: var(--space-4);
  }

  .container {
    padding: 0 var(--space-4);
  }
}

@media (max-width: 576px) {
  :root {
    --sidebar-width: 100%;
    --text-2xl: 1.25rem;
    --text-3xl: 1.375rem;
  }

  .btn {
    width: 100%;
  }

  .space-x-2 > * + * { margin-left: 0; }
  .space-x-4 > * + * { margin-left: 0; }
  .space-x-6 > * + * { margin-left: 0; }

  .table {
    font-size: var(--text-xs);
  }

  .table thead th,
  .table tbody td {
    padding: var(--space-2) var(--space-3);
  }
}
